<div class="admin-container">
    <h2 class="text-center mt-3">Add Product</h2>
    <form id="add-product-form">
        <table class="table">
            <tbody>
                <tr>
                    <td>Product Name</td>
                    <td><input id="prodName" type="text" size="100" name="productName"></td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td><input id="prodDesc" type="text" size="100"></td>
                </tr>
                <tr>
                    <td>Image Link</td>
                    <td><input id="prodImg" type="text" size="100"></td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td><input id="prodPrice" type="number" step="0.01"></td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <button id="addProduct" class="btn btn-primary" type="submit">Add Product</button>
        </div>
    </form>
    <hr class="bg-dark">
    <h2 class="text-center mt-3 mb-3">Update/Remove Product</h2>
    <table id="update-table" class="table table-striped table-bordered">
        <tbody>
            <thead>
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">Description</th>
                    <th class="text-center">Image</th>
                    <th class="text-center">Image Link</th>
                    <th class="text-center">Price</th>
                    <th class="text-center">Update</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
    {{#each products}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td><img src="{{this.image}}" width="50"></td>
            <td style="word-break: break-all">{{this.image}}</td>
            <td>{{this.price}}</td>
            <td class="text-center"><i class="fa fa-wrench modify-icons update-product" data-attr-1="{{this._id}}" data-attr-2="{{this.name}}" data-attr-3="{{this.description}}" data-attr-4="{{this.image}}" data-attr-5="{{this.price}}"></i></a></td>
            <td class="text-center"><a ><i class="fa fa-trash modify-icons delete-product" data-attr="{{this.id}}"></i></a></td>
        </tr>
    {{/each}}
        </tbody>
    </table>
</div>
