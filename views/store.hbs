<div id="storeDiv" class="text-center">
    {{#each products}}
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <img class="card-img-top" src="{{this.image}}" alt="product image">
            <div class="card-body">
                <h5 class="card-title store-product-name">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <p class="card-text">Price: $<span class="store-product-price">{{this.price}}</span></p>
                <button class="btn btn-primary add-to-cart">Add to Cart</button>
            </div>
        </div>
    {{/each}}
    
</div>