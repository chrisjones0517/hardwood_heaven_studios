<div id="contactDiv">
    <div id="contact-form-div" class="mx-auto">
        <h2 id="contact-title" class="pt-5 text-center mb-3">Contact Us</h2>
        <p class="text-light text-center">Got a question? We'd lover to hear from you. Send us a message and we'll respond as soon as possible.</p>
        <form>
            <div class="form-group">
                <label class="text-light" for="contact-name">Name*</label>
                <input type="text" class="form-control" id="contact-name">
            </div>
            <div class="form-group">
                <label class="text-light" for="contact-email">Email Address*</label>
                <input type="text" class="form-control" id="contact-email">
            </div>
            <div class="form-group">
                <label class="text-light" for="contact-message">Message</label>
                <textarea rows="4" class="form-control" id="contact-message"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Send Message</button>
        </form>
    </div>
</div>